# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database Configuration
DATABASE_URL=sqlite:///./csn_server.db
REDIS_URL=redis://localhost:6379/0

# Google Cloud / Firestore Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
FIRESTORE_COLLECTION_PREFIX=csn

# MCP (Model Context Protocol) Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=3000
MCP_CLIENT_ID=csn_server
MCP_CLIENT_SECRET=your-mcp-client-secret

# Agent Coordination Configuration
AGENT_COORDINATION_ENABLED=true
AGENT_BROKER_URL=redis://localhost:6379/1
AGENT_QUEUE_PREFIX=csn_agent
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=8001

# Biofield Validation Configuration
HRV_VALIDATION_ENABLED=true
HRV_SAMPLE_RATE=1000
HRV_MIN_SEGMENT_LENGTH=300
HRV_MAX_SEGMENT_LENGTH=3000
HRV_FREQUENCY_BANDS={
  "vlf": [0.003, 0.04],
  "lf": [0.04, 0.15],
  "hf": [0.15, 0.4],
  "vhf": [0.4, 0.5]
}

# AMA Integration Configuration
AMA_FIRESTORE_COLLECTION=ama_data
AMA_BATCH_SIZE=100
AMA_SYNC_INTERVAL=300

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true

# Monitoring and Logging
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
STRUCTLOG_LEVEL=INFO

# Development Tools
RELOAD=true
PROFILING_ENABLED=false 